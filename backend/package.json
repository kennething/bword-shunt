{
  "scripts": {
    "copy-events": "tsx ./src/scripts/copyEvents.ts",
    "watch-events": "nodemon --watch ./src/utils/events.ts --exec \"npm run copy-events\"",
    "serve": "nodemon --exec \"tsx\" src/app.ts",
    "dev": "npm run copy-events && concurrently --kill-others \"npm run watch-events\" \"npm run serve\""
  },
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0"
  }
}
